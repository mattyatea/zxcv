{
  "name": "@zxcv/backend",
  "version": "1.0.0",
  "description": "ZXCV - Coding Rules Sharing Platform Backend API",
  "scripts": {
    "dev": "pnpm migrate:local && wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run --config tests/vitest.config.mts",
    "test:watch": "vitest --config tests/vitest.config.mts",
    "test:coverage": "vitest run --config tests/vitest.config.mts --coverage",
    "test:unit": "vitest run --config tests/vitest.config.mts tests/unit",
    "test:integration": "vitest run --config tests/vitest.config.mts tests/integration",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "cf-typegen": "wrangler types",
    "schema": "pnpx chanfana",
    "prisma:generate": "prisma generate",
    "migrate:local": "wrangler d1 migrations apply zxcv-db --local",
    "migrate:prod": "wrangler d1 migrations apply zxcv-db --remote",
    "predeploy": "pnpm migrate:prod"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.1",
    "@prisma/adapter-d1": "^6.12.0",
    "@prisma/client": "^6.12.0",
    "chanfana": "2.8.1",
    "hono": "4.8.2",
    "jose": "^6.0.12",
    "mimetext": "^3.0.27",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@cloudflare/vitest-pool-workers": "0.8.44",
    "@types/node": "24.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "prisma": "^6.12.0",
    "typescript": "5.8.3",
    "vitest": "^3.2.4",
    "wrangler": "4.24.3"
  }
}
