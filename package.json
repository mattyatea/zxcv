{
	"name": "nuxt-app",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "nuxt build",
		"dev": "pnpm migrate:local && nuxt dev",
		"generate": "nuxt generate",
		"preview": "pnpm run build && wrangler dev",
		"postinstall": "nuxt prepare",
		"deploy": "pnpm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"prisma:generate": "prisma generate",
		"migrate:local": "wrangler d1 migrations apply zxcv-db --local",
		"migrate:prod": "wrangler d1 migrations apply zxcv-db --remote",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --noEmit"
	},
	"packageManager": "pnpm@10.12.1",
	"dependencies": {
		"@hono/zod-validator": "^0.7.1",
		"@nuxtjs/tailwindcss": "^6.14.0",
		"@orpc/client": "^1.7.2",
		"@orpc/server": "^1.7.2",
		"@prisma/adapter-d1": "^6.12.0",
		"@prisma/client": "^6.12.0",
		"chanfana": "2.8.1",
		"hono": "4.8.2",
		"jose": "^6.0.12",
		"mimetext": "^3.0.27",
		"nanoid": "^5.1.5",
		"nuxt": "^3.17.7",
		"vue": "^3.5.17",
		"vue-router": "^4.5.1",
		"zod": "3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@cloudflare/vitest-pool-workers": "0.8.44",
		"@types/node": "^24.0.14",
		"@vitest/coverage-v8": "^3.2.4",
		"h3": "^1.15.3",
		"nitro-cloudflare-dev": "^0.2.2",
		"nitropack": "^2.12.3",
		"prisma": "^6.12.0",
		"typescript": "5.8.3",
		"vitest": "^3.2.4",
		"wrangler": "^4.25.0"
	}
}