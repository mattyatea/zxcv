{
  "name": "zxcv-monorepo",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev:server": "pnpm -F server dev",
    "dev:cli": "pnpm -F cli dev",
    "build:server": "pnpm -F server build",
    "build:cli": "pnpm -F cli build",
    "preview:server": "pnpm -F server preview",
    "deploy:server": "pnpm -F server deploy",
    "test": "pnpm -F server test",
    "test:server": "pnpm -F server test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "typecheck": "pnpm -r typecheck",
    "typecheck:server": "pnpm -F server typecheck",
    "check": "pnpm -r check",
    "check:fix": "pnpm -r check:fix",
    "prisma:generate": "pnpm -F server prisma:generate",
    "migrate:local": "pnpm -F server migrate:local",
    "migrate:prod": "pnpm -F server migrate:prod",
    "prepare": "husky",
    "cf-typegen": "pnpm -F server cf-typegen"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "biome format --write"
    ]
  }
}